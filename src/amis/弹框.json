{
  "type": "page",
  "body": [
    {
      "type": "button",
      "className": "ml-2",
      "label": "打开弹窗（模态）",
      "level": "primary",
      "onEvent": {
        "click": {
          "actions": [
            {
              "actionType": "dialog",
              "dialog": {
                "type": "dialog",
                "title": "模态弹窗",
                "id": "dialog_001",
                "data": {
                  "myage": "22"
                },
                "body": [
                  {
                    "type": "tpl",
                    "tpl": "<p>对，你打开了模态弹窗</p>",
                    "inline": false
                  },
                  {
                    "type": "input-text",
                    "name": "myname",
                    "mode": "horizontal",
                    "onEvent": {
                      "change": {
                        "actions": [
                          {
                            "actionType": "confirm",
                            "componentId": "dialog_001"
                          }
                        ]
                      }
                    }
                  }
                ],
                "onEvent": {
                  "confirm": {
                    "actions": [
                      {
                        "actionType": "toast",
                        "args": {
                          "msg": "confirm"
                        }
                      }
                    ]
                  },
                  "cancel": {
                    "actions": [
                      {
                        "actionType": "toast",
                        "args": {
                          "msg": "cancel"
                        }
                      }
                    ]
                  }
                }
              }
            }
          ]
        }
      }
    }
  ]
}